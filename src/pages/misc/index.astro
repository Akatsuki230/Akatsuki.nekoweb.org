---
import Header from "@components/header.astro";
import "@styles/global.module.css";
import projectStyles from "@styles/projectList.module.css";
import Scripts from "@components/scripts.astro";
import Footer from "@components/footer.astro";
import Meta from "@components/meta.astro";
import Cursor from "@components/cursor.astro";
---

<!doctype html>
<html lang="en">
    <head>
        <Meta name="Miscellaneous things" description="Things that the community of Akatsuki wanted desparately for download. They're available here." />
        <Scripts />
    <Cursor />
</head>

    <body>
        <Header />
        <main>
            <h1>Akatsuki's miscellaneous content</h1>
            <div class={projectStyles.projectContainer}>
                <a href="/misc/menherasuma">
                    <div
                        class={projectStyles.project}
                        style="background-image: url(/misc/menherasuma/1.webp);"
                    >
                        <h3>Menherasuma</h3>
                        <p>MenheraChan on Satsuma and trans skin. Because yes.</p>
                    </div>
                </a>
                <a href="/misc/posters">
                    <div
                        class={projectStyles.project}
                        style="background-image: url(/misc/posters/1.webp);"
                    >
                        <h3>My Posters</h3>
                        <p>My posters for My Summer Car.</p>
                    </div>
                </a>
                <a href="/misc/sticker">
                    <div
                        class={projectStyles.project}
                        style="background-image: url(/misc/sticker/1.webp);"
                    >
                        <h3>My Window Sticker</h3>
                        <p>My Window sticker for My Summer Car.</p>
                    </div>
                </a>
                <a href="/misc/meshsave">
                  <div
                    class={projectStyles.project}
                    style="background-image: url(/misc/meshsave/1.webp);"
                  >
                    <h3>My Summer Car Meshsave</h3>
                    <p>The abomination car straight from the scrapyard leaving you wondering how it even starts.</p>
                  </div>
                </a>
            </div>
        </main>
        <Footer />
    </body>
</html>
