---
import Header from "@components/header.astro";
import "@styles/global.module.css";
import Scripts from "@components/scripts.astro";
import Footer from "@components/footer.astro";
import Meta from "@components/meta.astro";
import Cursor from "@components/cursor.astro";
import Tab from "@components/Tab.astro";
import Tabs from "@components/Tabs.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <Meta
      name="Visits to Velkonya"
      description="A list of Visits to Velkonya, a town in Minecraft on VelkySMP."
    />
    <Scripts />
    <Cursor />
    <style>
      .signlist {
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
      }

      .sign {
        width: max-content;
        border: 1px solid white;
        margin: 2px;
        padding: 2px;
        text-align: center;
      }
      
      .sign p {
        font-size: 14;
        padding: 0;
        margin: 0;
      }

      .tpurple p {
        color: #740074;
      }

      .tblue p {
        color: #0000ff;
      }

      .tred p {
        color: #ff0000;
      }

      .tlpurple p {
        color: #a736a7;
      }

      .tpink p {
        color: #ff77ff;
      }
    </style>
  </head>

  <body>
    <Header />
    <main>
      <h1>Visits to Velkonya</h1>
      <Tabs>
