---
import Header from "@components/header.astro";
import "@styles/global.module.css";
import Scripts from "@components/scripts.astro";
import Footer from "@components/footer.astro";
import Meta from "@components/meta.astro";
import Cursor from "@components/cursor.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <Scripts />
    <Cursor />
  </head>

  <body>
    <Header />
    <main>
      <h1>Admin Login</h1>
      <p>This is not a page to be accessed from a user. This is a page accessed by Akatsuki.</p>
      <p>Log in with your Nekoweb token:</p>
      <input type="password" name="pass" id="pass" />
      <button id="login">Log in</button>

      <div id="content" style="display: none;">
        <h2>Services</h2>
        <a href="/admin/nowpage">
          <button>Now page customize</button>
        </a>
      </div>

      <script is:inline>
        $("#login").click(function () {
          localStorage.setItem("nekowebToken", $("#pass").val());
          location.reload();
        });

        if (localStorage.getItem("nekowebToken") != null) {
          $("#content").css("display", "block");
        }
      </script>
    </main>
    <Footer />
  </body>
</html>
