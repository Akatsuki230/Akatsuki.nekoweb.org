import "@styles/global.module.css";
import Header from "@components/header.astro";
import Footer from "@components/footer.astro";
import Meta from "@components/meta.astro";
import Cursor from "@components/cursor.astro";
---

<!doctype html>
<html lang="en">
    <head>
        <Meta name="Water Bills" description="Water Bills for My Summer Car" tag="My Summer Car mods, Water Bills, adds water bills, adjustable price per liter, adjustable water consumption for shower and taps, copyright: アカツキ, email: akatsuki2555@waifu.club" />
    <Cursor client:load />
