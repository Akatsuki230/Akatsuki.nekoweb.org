---
import AnnouncementHeader from "./AnnouncementHeader.astro";
---

<header>

  <style>
    #headerImage {
      height: 150px;
      background-image: url(/misc/menherasuma/1.webp);
      background-position: center;
      background-size: cover;
    }

    #headerImage > div {
      height: 150px;
      background-image: linear-gradient(to bottom, rgb(44, 44, 44), transparent 40%, rgb(44, 44, 44) 100%);
    }

    #headerImage h2 {
      font-size: 2em;
      position: relative;
      left: 25px;
      top: 25px;
      text-shadow: 2px 2px 2px #000;
    }

    #headerImage p {
      position: relative;
      left: 25px;
      top: 20px;
      text-shadow: 2px 2px 2px #000;
    }

    .prideflags {
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .prideflag {
      height: 15px;
      width: 100vw;
    }
  </style>
